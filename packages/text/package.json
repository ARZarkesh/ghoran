{
  "name": "@ghoran/text",
  "version": "0.0.4",
  "description": "Quran text",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./fonts/": "./dist/fonts/"
  },
  "sideEffects": false,
  "scripts": {
    "extract": "esno ./scripts/extract/index",
    "generate-fonts": "esno ./scripts/generate-fonts",
    "postbuild": "pnpm run generate-fonts",
    "build": "pnpm run extract-text && unbuild && pnpm run postbuild",
    "prepublish": "pnpm run build"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [
    "dist/**/*",
    "json/*.json"
  ],
  "devDependencies": {
    "@types/wawoff2": "^1.0.2",
    "mammoth": "^1.7.1",
    "wawoff2": "^2.0.1"
  }
}
