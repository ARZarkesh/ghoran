{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@ghoran/text": ["./packages/text"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "vitest/importMeta",
      "vitest/globals"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}